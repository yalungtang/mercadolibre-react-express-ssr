{
  "name": "marketplace-search",
  "version": "1.0.0",
  "description": "A simplified version of a search engine for the MercadoLibre Marketplace API",
  "main": "src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:ui": "webpack --mode production",
    "build:prod": "rimraf dist/ && babel ./server --out-dir dist/ --copy-files && npm run build:ui",
    "serve:prod": "npm run build:prod && babel-node dist/index.js",
    "watch:be": "nodemon --exec babel-node ./server",
    "watch:ui": "webpack --watch --mode development",
    "dev": "npm-run-all -p watch:ui watch:be"
  },
  "author": "Yalung Tang",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.2",
    "core-util-is": "^1.0.2",
    "express": "^4.17.1",
    "nodemon": "^2.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/node": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-react": "^7.10.1",
    "babel-loader": "^8.1.0",
    "html-loader": "^1.1.0",
    "html-webpack-plugin": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "react-devtools": "^4.7.0",
    "redux-devtools": "^3.5.0",
    "rimraf": "^3.0.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
